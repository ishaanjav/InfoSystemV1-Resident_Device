<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="365dp"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:paddingBottom="10dp"
        android:paddingTop="5dp"
        android:id = "@+id/card"
        app:cardCornerRadius="25dp"
        app:cardElevation="7dp"
        app:cardBackgroundColor="#fed3d3"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/rel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fdab8d">

                <TextView
                    android:id="@+id/accountname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="9dp"
                    android:fontFamily="@font/regular"
                    android:paddingBottom="6dp"
                    android:textColor="#ff3300"
                    android:textSize="25dp" />
            </RelativeLayout>


            <TextView
                android:id="@+id/titleusername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rel"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/rlight"
                android:text="Description:"
                android:textColor = "#000000"

                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id = "@+id/speak"
                android:layout_below="@id/rel"
                android:layout_alignParentRight="true"
                android:layout_marginRight="7dp"
                android:layout_marginTop="-6dp"
                android:src="@drawable/soundicon"
                />



            <TextView
                android:id="@+id/accountdescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/titleusername"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="6dp"
                android:inputType="textMultiLine"
                android:layout_marginTop="1dp"
                android:fontFamily="@font/rlight"
                android:textColor="#ed5c34"
                android:textSize="19sp"

                />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:id = "@+id/userpicture"
                android:layout_below="@id/accountdescription"
                android:src="@drawable/oneuser"
                android:layout_marginTop="10dp"
                />


            <RelativeLayout
                android:id="@+id/bar"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_below="@id/userpicture"
                android:layout_marginTop="15dp"
                android:background="#9f1a02">


            </RelativeLayout>

            <TextView
                android:id="@+id/contactstitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/bar"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="9dp"

                android:fontFamily="@font/regular"
                android:text="Contact Info"
                android:textColor="#8f1d01"
                android:textSize="22dp" />

            <TextView
                android:id="@+id/titlephone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/contactstitle"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/rlight"
                android:text="Phone:"
                android:textColor = "#000000"

                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/titleemail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/titlephone"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="14dp"
                android:fontFamily="@font/rlight"
                android:text="Email:"
                android:textSize="20dp"
                android:textColor = "#000000"

                android:textStyle="bold" />

            <ImageView
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:id = "@+id/phoneimage"
                android:layout_alignParentRight="true"
                android:layout_below="@id/contactstitle"
                android:layout_marginTop="14sp"
                android:layout_marginRight="4dp"
                android:src="@drawable/phone"
                />
            <TextView
                android:id="@+id/accountphone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/contactstitle"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="14sp"
                android:layout_toRightOf="@id/titlephone"
                android:fontFamily="@font/rlight"
                android:textColor="#ed5c34"
                android:textSize="19sp"

                />

            <TextView
                android:id="@+id/accountemail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/accountphone"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="14sp"
                android:layout_toRightOf="@id/titleemail"
                android:fontFamily="@font/rlight"
                android:textColor="#ed5c34"
                android:textSize="19sp"

                />

            <ImageView
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:id = "@+id/emailimage"
                android:layout_alignParentRight="true"
                android:layout_below="@id/accountphone"
                android:layout_marginTop="14sp"
                android:layout_marginRight="10dp"
                android:src="@drawable/email"
                />


            <Button
                android:id="@+id/sendphone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/accountemail"
                android:text="CLICK TO CALL!"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_alignParentLeft="true"

                />
            <Button
                android:id="@+id/sendemail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/accountemail"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:text="CLICK TO EMAIL!"

                />

        </RelativeLayout>
    </android.support.v7.widget.CardView>


</RelativeLayout>